<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Slide from bottom left -->
    <translate
        android:fromXDelta="-100%p"
        android:toXDelta="0"
        android:fromYDelta="100%p"
        android:toYDelta="0"
        android:duration="500" />

    <!-- Fade in animation -->
    <alpha
        android:fromAlpha="0.0"
        android:toAlpha="1.0"
        android:duration="500" />
</set>